generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Game {
  appId Int @id 
  title String
  reviews Review[]
}

model Review {
  steamId         Int 
  game            Game @relation(fields: [appId], references: [appId])
  appId           Int
  review          String
  votedUp         Boolean
  votesUp         Int
  votesFunny      Int
  playtimeForever Int
  @@id([steamId, appId])
}

